@model Product
@{
    var categories = ViewBag.Categories as IEnumerable<Category> ?? Enumerable.Empty<Category>();
    var subCategories = ViewBag.SubCategories as IEnumerable<SubCategory> ?? Enumerable.Empty<SubCategory>();
}
<form hx-post="/Product/Create" hx-target="#add-new-form" hx-sync="this:queue"  class="border p-3 rounded">
    <h5 class="mb-3">Add New Product</h5>

    <div class="row g-3">
        <div class="col-md-4">
            <input asp-for="Name" class="form-control" placeholder="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <input asp-for="Description" class="form-control" placeholder="Description" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="col-md-2">
            <input asp-for="Price" type="text" class="form-control" placeholder="Price" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <!-- Cascading Category → Sub-Category -->
        <div class="form-group">
            <label asp-for="CategoryId">Category *</label>
            <select asp-for="CategoryId"
                    class="form-input"
                    hx-get="/Product/SubCategories"
                    hx-include="[name='CategoryId']"
                    hx-target="#subcategory-container"
                    hx-swap="innerHTML"
                    hx-trigger="change"
                    hx-sync="this:replace">
                <option value="">-- Select Category --</option>
                @foreach (var cat in categories)
                {
                    <option value="@cat.Id">@cat.Name</option>
                }
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="form-group" id="subcategory-container">
            @await Html.PartialAsync("_SubCategoryOptions", subCategories)
        </div>

        <div asp-validation-summary="All"></div>

        <div class="col-12">
            <button type="submit" class="btn btn-primary mt-2">
                Add Product
            </button>
        </div>
    </div>
</form>