@model Product

<tr>
    <td>@Model.Name</td>
    <td>@Model.Description</td>
    <td>@Html.DisplayFor(m => m.Price)</td>
    <td>@Model.Category</td>
    <td>@Model.CreatedAt.ToString("yyyy-MM-dd")</td>
    <td>@Model.UpdatedAt.ToString("yyyy-MM-dd")</td>
    <td class="text-center">
        <div class="btn-group btn-group-sm" role="group">
            <!-- Edit Button -->
            <button type="button"
                    class="btn btn-outline-primary"
                    title="Edit product"
                    hx-get="/Product/EditRow/@Model.Id"
                    hx-target="closest tr"
                    hx-select="tr"
                    hx-swap="outerHTML swap:200ms">
                <i class="bi bi-pencil-fill"></i>
                Edit
            </button>

            <!-- Delete Button -->
            <button type="button"
                    class="btn btn-outline-danger"
                    title="Delete product"
                    hx-delete="/Product/Delete/@Model.Id"
                    hx-target="closest tr"
                    hx-select="tr"
                    hx-swap="outerHTML swap:200ms"
                    hx-confirm="Are you sure you want to delete '@Model.Name'? This action cannot be undone.">
                <i class="bi bi-trash3-fill"></i>
                Delete
            </button>
        </div>
    </td>
</tr>